
{
  "name": "admin_users",
  "options": {
    "validator": {
      "$jsonSchema": {
        "bsonType": "object",
        "required": ["admin_id", "password", "admin_name", "role", "is_active", "created_at"],
        "properties": {
          "admin_id": {
            "bsonType": "string",
            "description": "관리자 로그인 ID"
          },
          "password": {
            "bsonType": "string",
            "description": "관리자 비밀번호"
          },
          "admin_name": {
            "bsonType": "string",
            "description": "관리자 이름"
          },
          "email": {
            "bsonType": "string",
            "description": "관리자 이메일"
          },
          "role": {
            "bsonType": "string",
            "enum": ["super_admin", "admin", "manager"],
            "description": "관리자 역할"
          },
          "permissions": {
            "bsonType": "array",
            "items": {
              "bsonType": "string"
            },
            "description": "권한 목록"
          },
          "is_active": {
            "bsonType": "bool",
            "description": "계정 활성화 상태"
          },
          "last_login": {
            "bsonType": "string",
            "title": "datetime",
            "description": "마지막 로그인 시간"
          },
          "created_at": {
            "bsonType": "string",
            "title": "datetime",
            "description": "계정 생성 시간"
          },
          "updated_at": {
            "bsonType": "string",
            "title": "datetime",
            "description": "계정 수정 시간"
          }
        },
        "additionalProperties": true
      }
    },
    "validationLevel": "moderate",
    "validationAction": "warn"
  }
}
