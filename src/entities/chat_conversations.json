{
  "name": "chat_conversations",
  "description": "채팅 대화 데이터 (JSON 형태로 메시지 저장)",
  "fields": {
    "id": {
      "type": "string",
      "description": "대화 고유 ID (UUID)"
    },
    "chat_room_id": {
      "type": "string",
      "description": "채팅방 ID"
    },
    "conversation_data": {
      "type": "object",
      "description": "질문과 답변을 JSON 배열로 저장",
      "format": "jsonb",
      "example": [
        {
          "id": "msg_1",
          "sender_type": "user",
          "sender_name": "사용자명",
          "message_text": "메시지 내용",
          "timestamp": "2024-01-15T10:00:00Z"
        },
        {
          "id": "msg_2",
          "sender_type": "admin", 
          "sender_name": "관리자",
          "message_text": "답변 내용",
          "timestamp": "2024-01-15T10:01:00Z"
        }
      ]
    },
    "message_count": {
      "type": "number",
      "description": "이 대화에 포함된 메시지 수",
      "default": 0
    },
    "first_message_at": {
      "type": "string",
      "description": "첫 번째 메시지 시간"
    },
    "last_message_at": {
      "type": "string",
      "description": "마지막 메시지 시간"
    },
    "created_at": {
      "type": "string",
      "description": "생성 시간"
    },
    "updated_at": {
      "type": "string",
      "description": "수정 시간"
    }
  }
}
