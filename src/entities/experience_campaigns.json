
{
  "$jsonSchema": {
    "bsonType": "object",
    "title": "ExperienceCampaign",
    "description": "체험단 캠페인 정보",
    "additionalProperties": true,
    "required": ["campaign_id", "title", "brand", "category", "status", "recruitment_count", "created_at"],
    "properties": {
      "campaign_id": {
        "bsonType": "string",
        "description": "캠페인 고유 ID"
      },
      "title": {
        "bsonType": "string",
        "description": "캠페인 제목"
      },
      "brand": {
        "bsonType": "string",
        "description": "브랜드명"
      },
      "category": {
        "bsonType": "string",
        "enum": ["beauty", "food", "lifestyle", "tech", "fashion", "health"],
        "description": "카테고리"
      },
      "description": {
        "bsonType": "string",
        "description": "캠페인 설명"
      },
      "product_value": {
        "bsonType": "number",
        "minimum": 0,
        "description": "제품 가치 (원)"
      },
      "points_reward": {
        "bsonType": "number",
        "minimum": 0,
        "description": "지급 포인트"
      },
      "recruitment_count": {
        "bsonType": "int",
        "minimum": 1,
        "description": "모집 인원"
      },
      "current_applicants": {
        "bsonType": "int",
        "minimum": 0,
        "description": "현재 신청자 수"
      },
      "status": {
        "bsonType": "string",
        "enum": ["recruiting", "in_progress", "review", "completed", "cancelled"],
        "description": "캠페인 상태"
      },
      "application_deadline": {
        "bsonType": "string",
        "title": "datetime",
        "description": "신청 마감일"
      },
      "experience_period": {
        "bsonType": "string",
        "description": "체험 기간"
      },
      "requirements": {
        "bsonType": "array",
        "description": "참여 조건"
      },
      "image_url": {
        "bsonType": "string",
        "description": "캠페인 이미지"
      },
      "created_at": {
        "bsonType": "string",
        "title": "datetime",
        "description": "생성일시"
      },
      "updated_at": {
        "bsonType": "string",
        "title": "datetime",
        "description": "수정일시"
      }
    }
  }
}
